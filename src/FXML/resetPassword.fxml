<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
	style="-fx-background-color: #fffff0;" stylesheets="@application.css"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="Controller.ResetPasswordController">

	<children>
		<PasswordField fx:id="newPasswordField" layoutX="215.0"
			layoutY="128.0" promptText="Enter new password" />
		<PasswordField fx:id="confirmPasswordField"
			layoutX="215.0" layoutY="188.0" promptText="Re-enter new password" />
		<Button fx:id="resetPasswordButton" layoutX="230.0"
			layoutY="258.0" mnemonicParsing="false"
			onAction="#handleResetPassword"
			style="-fx-background-color: #efaf23;" text="Reset Password" />
		<ToggleButton fx:id="showPasswordToggle" layoutX="398.0"
			layoutY="188.0" onAction="#handleShowPasswordAction"
			style="-fx-background-color: #fffff0;" styleClass="toggle-button"
			text="Show Password" />
		<Label layoutX="230.0" layoutY="24.0" text="Jd"
			textFill="#efaf23">
			<font>
				<Font size="53.0" />
			</font>
		</Label>
		<Label layoutX="281.0" layoutY="24.0" text="eco"
			textFill="#6b6f7e">
			<font>
				<Font size="53.0" />
			</font>
		</Label>
		<Button fx:id="cancelButton" layoutX="257.0" layoutY="322.0"
			mnemonicParsing="false" onAction="#handleCancel"
			style="-fx-background-color: #efaf23;" text="Cancel" />
	</children>
</AnchorPane>