<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="Controller.ForgotPasswordController">
	<style>-fx-background-color: #fffff0;
	</style>
	<children>
		<TextField fx:id="resetCodeField" layoutX="200.0"
			layoutY="140.0" prefWidth="200.0" promptText="Enter reset code">
			<style>
				-fx-background-color: linear-gradient(to bottom, #ECEFF1,
				#B0BEC5);
				-fx-background-radius: 10;
				-fx-border-color: #90A4AE;
				-fx-border-radius: 10;
				-fx-border-width: 2px;
			</style>
		</TextField>
		<Button fx:id="sendcode" layoutX="229.0" layoutY="246.0"
			mnemonicParsing="false" onAction="#handleResetPassword"
			text="Send Reset Code">
			<style>
				-fx-background-color: linear-gradient(to bottom, #43A047,
				#1B5E20);
				-fx-text-fill: #ffffff;
				-fx-font-size: 16px;
				-fx-background-radius: 10;
				-fx-background-color: #efaf23;
			</style>
		</Button>
		<Label layoutX="224.0" layoutY="25.0" text="Jd"
			textFill="#efaf23">
			<font>
				<Font size="53.0" />
			</font>
		</Label>
		<Label layoutX="274.0" layoutY="25.0" text="eco"
			textFill="#6b6f7e">
			<font>
				<Font size="53.0" />
			</font>
		</Label>
	</children>
</AnchorPane>